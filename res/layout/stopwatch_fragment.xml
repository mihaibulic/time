<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/master_stopwatch_off"
    android:orientation="vertical"
    android:keepScreenOn="true" >

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/master_stopwatch"
        />
    <TextView 
        android:id="@+id/master_stopwatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="@dimen/time_text"
        android:paddingBottom="@dimen/padding"
        />

    <GridView
        android:id="@+id/stopwatch_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="@integer/stopwatch_list_num_of_columns"
        android:stretchMode="columnWidth"
        android:gravity="center" >
    </GridView>
</LinearLayout>